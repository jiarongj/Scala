def getSquareString(input:Double):String={
  val keep = input*input
  keep.toString
}
println(getSquareString(0.25))

class Greeter(prefix:String, Postfix:String){
  def Greet(name:String):Unit={
    val tak = prefix+name+Postfix
    println(tak)
  }
}
 
val Gre = new Greeter("Like a ", " baby")
Gre.Greet("cute")
